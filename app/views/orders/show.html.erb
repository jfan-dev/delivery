<h2>Order Details</h2>
<% @order.order_items.each do |item| %>
  <div>
    <p><strong>Title:</strong> <%= item.product.title %></p>
    <p><strong>Price:</strong> <%= number_to_currency(item.product.price) %></p>
    <p><strong>Quantity:</strong> <%= item.quantity %></p>
    <p><strong>Total:</strong> <%= number_to_currency(item.product.price * item.quantity) %></p>
  </div>
<% end %>